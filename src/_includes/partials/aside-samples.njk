{% import "macros/ui.njk" as ui %}
<aside class="portal__aside" aria-label="Navegação do Design System">
  {% if asideTopButton %}
  <div class="aside__top-button">
    {{ ui.button(
      href=asideTopButton.href,
      text=asideTopButton.text,
      variant=asideTopButton.variant or 'nav',
      icon=asideTopButton.icon or '',
      title=asideTopButton.title or ''
    ) }}
  </div>
  {% endif %}

  <nav class="portal__nav" aria-label="Componentes">
    <h2 class="course__doc-title">Componentes</h2>
    {% set components = [
      { name: 'Accordion', path: 'accordion' },
      { name: 'Alertas', path: 'alerts' },
      { name: 'Badge', path: 'badge' },
      { name: 'Botões', path: 'buttons' },
      { name: 'Breadcrumb', path: 'breadcrumb' },
      { name: 'Cards', path: 'cards' },
      { name: 'Certificado', path: 'certificate' },
      { name: 'Checklist', path: 'checklist' },
      { name: 'Code Block', path: 'code-block' },
      { name: 'Modal', path: 'modal' },
      { name: 'Quiz', path: 'quiz' },
      { name: 'Tabs', path: 'tabs' },
      { name: 'Tooltip', path: 'tooltip' },
      { name: 'Vídeo', path: 'video' }
    ] %}
    <ul class="portal__nav-list">
      {% for item in components %}
      <li><a href="{{ ('/samples/components/' ~ item.path ~ '/') | url }}" class="portal__nav-link" title="{{ item.name }}"{% if page.filePathStem == '/samples/components/' ~ item.path %} aria-current="page"{% endif %}>{{ item.name }}</a></li>
      {% endfor %}
    </ul>
  </nav>

  <nav class="portal__nav" aria-label="Layouts">
    <h2 class="course__doc-title">Layouts</h2>
    <ul class="portal__nav-list">
      <li><a href="{{ '/samples/components/module/' | url }}" class="portal__nav-link" title="Layout de Módulo"{% if page.filePathStem == '/samples/components/module' %} aria-current="page"{% endif %}>Módulo</a></li>
      <li><a href="{{ '/samples/components/constructions/' | url }}" class="portal__nav-link" title="Página em Construção"{% if page.filePathStem == '/samples/components/constructions' %} aria-current="page"{% endif %}>Construção</a></li>
    </ul>
  </nav>

  <section class="doc-info">
    <h2 class="doc-info__title">Design System</h2>
    <p class="doc-info__text">
      Guia de estilos e componentes do DevOps Arcade Template.
    </p>
  </section>
</aside>